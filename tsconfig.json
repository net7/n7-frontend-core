{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "typedocOptions": {
    "includes": "src",
    "mode": "modules",
    "out": "docs"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}